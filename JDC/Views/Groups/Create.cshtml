@model Group

@{
    ViewData["Title"] = "Создание группы";
}

<h1>Создание группы</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teacher</label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teachers">
                    <option value="" disabled selected>Select teacher</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Speciality</label>
                <select asp-for="SpecialityId" class="form-control" asp-items="ViewBag.Specialities">
                     <option value="" disabled selected>Select your speciality</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
