@model RegistrationModel

@{
    ViewData["Title"] = "Регистрация";
    var types = new List<SelectListItem>();

    foreach (InstituteType type in Enum.GetValues(typeof(InstituteType)))
    {
        types.Add(new SelectListItem
        {
            Value = ((int)type).ToString(),
            Text = type.GetDescription(),
        });
    }
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-12 col-sm-8 col-md-7 col-lg-6 col-xl-4">
        <form asp-action="Register" method="post">
            <h4>Создание заявки на регистрацию учреждения образования.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger pl-3"></div>

            <div class="form-group">
                <label class="other-info" asp-for="@Model.DirectorName"></label>
                <input asp-for="@Model.DirectorName" class="form-control" />
            </div>

            <div class="form-group">
                <label class="other-info" asp-for="@Model.PhoneNumber"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
            </div>

            <div class="form-group">
                <label class="other-info" asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control" />
            </div>

            <div class="form-group">
                <label class="other-info" asp-for="@Model.InstitutionType"></label>
                <select class="form-control" asp-for="@Model.InstitutionType" asp-items="@types">
                    <option value="" disabled selected >Выберите тип учреждения</option>
                </select>
            </div>

            <div class="form-group">
                <label class="other-info" asp-for="@Model.WebsiteLink"></label>
                <input asp-for="@Model.WebsiteLink" class="form-control" />
            </div>

            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customControlAutosizing" asp-for="@Model.AcceptTermsOfAgreement">
                <label class="custom-control-label" for="customControlAutosizing" asp-for="@Model.AcceptTermsOfAgreement">@Html.DisplayNameFor(model => model.AcceptTermsOfAgreement)</label>
            </div>

            <div class="form-group">
                <p>
                    <a asp-action="RegisterConfirmation" asp-route-id="-1">Уже вводили Email?</a>
                </p>
            </div>
            <button type="submit" class="btn btn-primary mb-3">Отправить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
