@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Подтверждение электронной почты";
}

<h1>@ViewData["Title"]</h1>

<p>Пожалуйста, проверьте свою электронную почту для подтверждения учетной записи.</p>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <input type="hidden" asp-for="Input.Id" />            
            <div asp-validation-summary="All" class="text-danger"></div>                
            <div class="form-group @(Model.Input.Id != -1 ? "d-none" : "")">
                <label asp-for="Input.Email" class="other_info"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>            

            <div class="form-group">
                <label asp-for="Input.ConfirmationCode" class="other_info"></label>
                <input asp-for="Input.ConfirmationCode" class="form-control input_number"/>
                <span asp-validation-for="Input.ConfirmationCode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Подтвердить</button>
        </form>
    </div>
</div>
