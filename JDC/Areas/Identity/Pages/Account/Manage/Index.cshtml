@page
@model  JDC.Areas.Identity.Pages.Account.Manage.Index
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row setting_card">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-center">
                <div class="position-relative">
                    <div class="rounded-circle">
                        <img class="profile_img" src="~/images/default_student_avatar.png" />
                    </div>
                    <div class="d-flex align-items-center edit_photo">
                        <button id="change_image" class="none_button dropdown-toggle h-100 w-100" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fa fa-camera" aria-hidden="true"></i>
                        </button>

                        <div class="dropdown-menu" aria-labelledby="change_image" style="top: -1px;">
                            <a class="dropdown-item">Изменить фотографию</a>
                            <a class="dropdown-item color_red">Удалить фотографию</a>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="">
                        <h3 class="user_name">@(Model.Input.LastName) @(Model.Input.FirstName)</h3><br />
                        <h4 class="other_info">Укажите основную информацию, чтобы пользоваться JDC было удобнее</h4>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="form-group col">
                    <label class="other_info" asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label class="other_info" asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col">
                    <label class="other_info" asp-for="Input.MiddleName"></label>
                    <input asp-for="Input.MiddleName" class="form-control" />
                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label class="other_info" asp-for="Input.Sex"></label>
                    <select asp-for="Input.Sex" class="form-control">
                        <option>Мужской</option>
                        <option>Женский</option>
                    </select>
                    <span asp-validation-for="Input.Sex" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="form-group col">
                    <label class="other_info" asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Сохранить</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}